# Frontend Environment Configuration
NODE_ENV=development

# App Configuration
APP_VERSION_STRING=
APP_NAME=C
APP_DESCRIPTION=

# Server Configuration
PORT=
HOSTNAME=0.0.0.0
# NextAuth Configuration
NEXTAUTH_URL=

# Server Ports
BACKEND_PORT=
FRONTEND_PORT=
ADMIN_PORT=
DEBUG_PORT=
POSTGRES_PORT=

# Database Configuration
# run locally
DB_HOST=localhost
# Nest run in docker, change host to database container name or AAPANEL!!!!!!!!!!!!!!!!!
#DB_HOST=postgres
DB_PORT=
DB_SCHEMA=
DB_SSL=false
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}?schema=public&sslmode=prefer
PGADMIN_DEFAULT_EMAIL=
PGADMIN_DEFAULT_PASSWORD=

NEXTAUTH_SECRET=your-super-secret-jwt-key-for-development-only
# API Configuration
NEXT_PUBLIC_ADMIN_URL=
NEXT_PUBLIC_WEBSITE_URL=NEXT_PUBLIC_API_URL=
API_URL=api
# CORS Configuration (Development URLs)
FRONTEND_URL=
FRONTEND_URL=
CORS_ORIGINS=

# App Configuration
NEXT_PUBLIC_APP_NAME=
NEXT_PUBLIC_APP_VERSION=

# Image Configuration
NEXT_PUBLIC_IMAGE_BASE_URL=

# Auth Configuration (if needed for client-side)
NEXT_PUBLIC_JWT_EXPIRATION=24h
NEXT_PUBLIC_JWT_SECRET=development-jwt-secret-key-not-for-production    

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg

# Rate Limiting (More lenient for development)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# Logging
LOG_LEVEL=debug

# Development Features
ENABLE_DOCS=true
ENABLE_PLAYGROUND=true

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database (when you add one)
DATABASE_URL=your-database-connection-string
# Admin Specific
NEXT_PUBLIC_ADMIN_MODE=true

# Email Configuration (if needed)
# SMTP_HOST=your-smtp-host
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password

# External Services (if needed)
# REDIS_URL=redis://localhost:6379
# CLOUDINARY_URL=cloudinary://your-cloudinary-url

# Facebook Pixel Configuration
# Get your Pixel ID from: https://business.facebook.com/events_manager
NEXT_PUBLIC_FB_PIXEL_ID=3599167170310984

# Google Analytics (Optional)
# NEXT_PUBLIC_GA_ID=UA-XXXXXXXXX-X

# Google Tag Manager (Optional)
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Chat Webhook Configuration
# URL where customer messages will be sent (external webhook endpoint)
NEXT_PUBLIC_CHAT_WEBHOOK_SEND_URL=https://your-webhook-service.com/api/chat/incoming
# URL where agent responses will be sent from (this is your frontend receiving webhook)
NEXT_PUBLIC_CHAT_WEBHOOK_RECEIVE_URL=http://${SERVER_IP}:${FRONTEND_PORT}/api/chat/receive
# Secret token for webhook authentication
CHAT_WEBHOOK_SECRET=your-secure-webhook-secret-token-here